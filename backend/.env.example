# Example environment configuration
# Copy this to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database
DATABASE_URL=sqlite:///leads.db

# Email Configuration (Gmail)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=support@tradegpt.sbs
SENDER_PASSWORD=your-app-password
ADMIN_EMAIL=admin@tradegpt.sbs

# Email Configuration (SendGrid - Alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key

# CORS Configuration
ALLOWED_ORIGINS=https://tradegpt.sbs,https://www.tradegpt.sbs,https://admin.tradegpt.sbs,https://api.tradegpt.sbs,http://localhost:8000,http://127.0.0.1:8000,http://localhost:5000

# CRM Integration (Optional)
HUBSPOT_API_KEY=
SALESFORCE_API_KEY=
PIPEDRIVE_API_KEY=

# Rate Limiting
API_RATE_LIMIT=100/hour
MAX_LEADS_PER_IP=5/day

# Session Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/tradegpt.log
